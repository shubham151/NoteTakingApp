{
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/main.ts" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
